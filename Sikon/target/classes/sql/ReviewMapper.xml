<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ReviewMapper">
 	
 	
	<resultMap id="reviewSelectMap" type="review">
		<result property="reviewNo" 			column="review_no" 			jdbcType="NUMERIC"/>
		<result property="writerNickname" 	column="writer_nickname" 		jdbcType="VARCHAR" />
		<result property="reviewContent" 	column="review_content" 		 jdbcType="CLOB" javaType="java.lang.String" />
		<result property="reviewRegdate" 	column="review_regdate" 		jdbcType="DATE" />
		<result property="reviewCategory" 			column="review_category" 			jdbcType="VARCHAR"/>
		<result property="recipe.recipeNo" 			column="recipe_no" 			jdbcType="NUMERIC"/>
		<result property="product.prodNo" 			column="prod_no" 			jdbcType="NUMERIC"/>
		<result property="purchase.tranNo" 			column="tran_no" 			jdbcType="NUMERIC"/>
		<result property="classApply.classNo" 			column="class_no" 			jdbcType="NUMERIC"/>
		<result property="cookClass.applyNo" 			column="apply_no" 			jdbcType="NUMERIC"/>
	</resultMap>
	
		<resultMap id="reviewImageSelectMap" type="reviewImage">
		<result property="imgNo" 			column="img_no" 			jdbcType="NUMERIC"/>
		<result property="reviewNo" 			column="review_no" 			jdbcType="NUMERIC"/>
		<result property="imgName" 	column="img_name" 		jdbcType="VARCHAR" />
	</resultMap>
	
	<!-- SQL : INSERT -->
	<insert 	id="addReview"		parameterType="review" >
	 	INSERT ALL
		INTO review VALUES	 (	seq_review_no.nextval  ,#{writerNickname}, #{reviewContent},SYSDATE,#{reviewCategory},#{recipe.recipeNo},#{product.prodNo},#{purchase.tranNo},#{classApply.classNo},#{cookClass.applyNo})		
		INTO reviewImage VALUES (seq_img_no.nextval,seq_review_no.nextval, #{imgName})
		select* from dual
	 </insert>
	 
	 
	 <select 	id="getReview"	parameterType="int"	resultMap="reviewSelectMap">
		SELECT *
		FROM review
		WHERE review_no= #{reviewNo}
	 </select>
	 
	  <!-- SQL : UPDATE -->
	 <update	id="updateReview"	parameterType="review" >
	   	UPDATE review
	   	<set>
	   		review_content 	= #{reviewContent}
	   	</set>
			WHERE review_no= #{reviewNo}
	 </update>
	 
	   <!-- SQL : UPDATE -->
	 <update	id="updateReviewImage"	parameterType="reviewImage" >
	   	UPDATE reviewimage
	   	<set>
	   		img_name = #{imgName}
	   	</set>
			WHERE img_no= #{imgNo}
	 </update>
	 
	 
	 <select  id="getReviewList"  parameterType="map"	resultMap="reviewSelectMap">
	  	SELECT *
	  	FROM (	SELECT inner_table.* , ROWNUM AS row_seq
	  					FROM		(	select *
	  					from review
	  					<if test="category !=null">
	  					<choose>
						<when test="category == 100 || category =='100' ">
	  					where prod_no=#{textNo}
	  					</when>
	  					<when test="category == 200 || category =='200' ">
	  					where recipe_no=#{textNo}
	  					</when>
	  					</choose>
	  					</if>
				 ) inner_table
											
						WHERE ROWNUM &lt;= #{search.endRowNum} )
		WHERE row_seq BETWEEN #{search.startRowNum} AND #{search.endRowNum} 
	 </select>
	 
	 
	 <select  id="getTotalCount"  parameterType="map"	 resultType="int">
	  	SELECT COUNT(*)
	  	FROM(	 select *
	  					from review
	  					<if test="category !=null">
	  					<choose>
						<when test="category == 100 || category =='100' ">
	  					where prod_no=#{textNo}
	  					</when>
	  					<when test="category == 200 || category =='200' ">
	  					where recipe_no=#{textNo}
	  					</when>
	  					</choose>
	  					</if>
						
													) countTable						
	 </select>
	 
</mapper>